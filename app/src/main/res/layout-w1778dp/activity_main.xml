<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="8dp">

    <!-- Time Card (Top Left, smaller for 720px height) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/timeCard"
        android:layout_width="730dp"
        android:layout_height="260dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textColor="@color/text_primary"
                android:textSize="110sp"
                android:fontFamily="sans-serif-light"
                android:includeFontPadding="false"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saturday, 24 January"
                android:textColor="@color/text_secondary"
                android:textSize="18sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Battery/Energy Card (Bottom Left, adjusted for 720px height) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/batteryCard"
        android:layout_width="730dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeCard"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Horizontal Battery Indicator -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <FrameLayout
                    android:layout_width="320dp"
                    android:layout_height="90dp">

                    <!-- Battery Outline -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/battery_outline" />

                    <!-- Battery Fill Container -->
                    <FrameLayout
                        android:id="@+id/batteryFillContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:padding="6dp">

                        <View
                            android:id="@+id/batteryFill"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:background="@drawable/battery_fill" />

                    </FrameLayout>

                    <!-- Battery Cap (right side) -->
                    <View
                        android:layout_width="8dp"
                        android:layout_height="32dp"
                        android:layout_gravity="end|center_vertical"
                        android:background="@drawable/battery_cap" />

                </FrameLayout>

            </FrameLayout>

            <!-- Battery Info Below -->
            <TextView
                android:id="@+id/batteryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="39%"
                android:textColor="@color/text_primary"
                android:textSize="64sp"
                android:fontFamily="sans-serif-thin"
                android:letterSpacing="-0.02"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/rangeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85 miles"
                android:textColor="@color/text_secondary"
                android:textSize="18sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Music + Heating Container (Center, 60% of screen width) -->
    <LinearLayout
        android:id="@+id/musicHeatingContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/timeCard"
        app:layout_constraintEnd_toStartOf="@id/quickActionsCard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.50"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <!-- Music Card (Takes remaining space) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/musicCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Blurred stretched background (fills gaps) -->
                <ImageView
                    android:id="@+id/albumArtBlurred"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:alpha="0.6" />

                <!-- Album Art Foreground (fits properly without cropping) -->
                <ImageView
                    android:id="@+id/albumArt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:alpha="1.0" />

                <!-- Dark overlay for better text contrast -->
                <!-- <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0D000000" /> -->

                <!-- Gradient scrim at bottom for text readability -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_scrim" />

                <!-- Content overlay on top of album art -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:padding="6dp">

                    <!-- Song Info -->
                    <TextView
                        android:id="@+id/songTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_primary"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/artistName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_primary"
                        android:textSize="24sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:layout_marginBottom="10dp" />

                    <!-- Progress Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <SeekBar
                            android:id="@+id/progressBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@android:style/Widget.SeekBar"
                            android:progressTint="@color/text_primary"
                            android:progressBackgroundTint="#404040"
                            android:thumbTint="@color/text_primary"
                            android:splitTrack="false"
                            android:minHeight="4dp"
                            android:maxHeight="4dp"
                            android:max="100"
                            android:progress="0"
                            android:layout_marginBottom="0dp" />

                        <!-- Time Labels -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/currentTime"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="0:00"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:gravity="start" />

                            <TextView
                                android:id="@+id/totalTime"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="-0:00"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:gravity="end" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Playback Controls (smaller buttons) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/prevButton"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_previous"
                            android:tint="@color/text_primary"
                            android:scaleType="fitCenter"
                            android:padding="16dp"
                            android:contentDescription="Previous" />

                        <Space
                            android:layout_width="32dp"
                            android:layout_height="wrap_content" />

                        <ImageButton
                            android:id="@+id/playPauseButton"
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_play"
                            android:tint="@color/text_primary"
                            android:scaleType="fitCenter"
                            android:padding="14dp"
                            android:contentDescription="Play/Pause" />

                        <Space
                            android:layout_width="32dp"
                            android:layout_height="wrap_content" />

                        <ImageButton
                            android:id="@+id/nextButton"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_next"
                            android:tint="@color/text_primary"
                            android:scaleType="fitCenter"
                            android:padding="16dp"
                            android:contentDescription="Next" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Heating Controls Card (Fixed height to match icons) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/heatingCard"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="0dp">

                <!-- Left Heated Seat Button -->
                <LinearLayout
                    android:id="@+id/leftSeatButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/leftSeatIcon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_heated_seat_off"
                        android:scaleType="fitCenter"
                        android:contentDescription="Left Heated Seat" />

                </LinearLayout>

                <!-- Heated Steering Wheel Button -->
                <LinearLayout
                    android:id="@+id/wheelButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/wheelIcon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_heated_wheel_off"
                        android:scaleType="fitCenter"
                        android:contentDescription="Heated Steering Wheel" />

                </LinearLayout>

                <!-- Right Heated Seat Button -->
                <LinearLayout
                    android:id="@+id/rightSeatButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/rightSeatIcon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_heated_seat_off"
                        android:scaleType="fitCenter"
                        android:contentDescription="Right Heated Seat" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Quick Actions Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/quickActionsCard"
        android:layout_width="110dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <!-- CarPlay Button -->
            <LinearLayout
                android:id="@+id/carPlayButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/carPlayIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_carplay_selector"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="6dp"
                    android:enabled="false" />

                <TextView
                    android:id="@+id/carPlayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CarPlay"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#30FFFFFF"
                android:layout_marginVertical="10dp" />

            <!-- HVAC Button -->
            <LinearLayout
                android:id="@+id/hvacButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="10dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_hvac"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Climate"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#30FFFFFF"
                android:layout_marginVertical="10dp" />

            <!-- Settings Button -->
            <LinearLayout
                android:id="@+id/settingsButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="10dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_settings"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#30FFFFFF"
                android:layout_marginVertical="10dp" />

            <!-- Launcher Button -->
            <LinearLayout
                android:id="@+id/launcherButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="10dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_launcher_saic"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MG4"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
